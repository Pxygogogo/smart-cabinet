.article{
  width: 95%;
  height: 230rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ccc;
  margin: 0 30rpx;
}

.img-box{
  width: 26%;
  height: 80%;
}
.img-box image{
  width: 100%;
  height: 170rpx;
}

.title{
  width: 70%;
  height: 80%;
  line-height: 40rpx;
  font-size: 26rpx;
  padding: 20rpx 0rpx;
  margin-left: 20rpx;
}