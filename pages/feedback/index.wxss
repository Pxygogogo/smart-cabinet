.img-box,.body{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img-box image{
  width: 80%;
  height: 250rpx;
}
.body{
  flex-direction: row;
  flex-wrap: wrap;
}
.title , .txt{
  margin-top: 40rpx;
  width:80%;
  height: 120rpx;
  border: 1rpx solid #fdfdfd;
  box-shadow: 0px 0px 40rpx #eaeaea;
  line-height: 120rpx;
  text-align: center;
  border-radius: 25rpx;
}

.txt{
  height: 300rpx;
  padding: 20rpx;
  text-align: left;
  font-size: 32rpx;
}
textarea{
  width: 100%;
  height: 100%;
  line-height: 60rpx;
}
.btn{
  margin-top: 40rpx;
}
