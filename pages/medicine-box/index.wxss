  搜索部分css 
  ========
*/
.searech-box{
  width:100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.add-medicine{
  width: 25%;
  height: 60rpx;
}

.add-medicine image{
  width: 100%;
  height: 100%;
}

.search{
  width: 70%;
  height: auto;
  display: flex;
  align-items: flex-start;
  margin: 0rpx auto;
}

.search-left{
  flex: 4;
  background-color: rgb(240, 240, 240);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}

.search input{
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.icon-search{
  width: 10%;
  height: 50rpx;
}
/**/

.ification{
    width: 100%;
    height: 100%;
    background-color: #fff;
    display: flex;
    justify-content: start;
}
.scroll-left{
    width: 22%;
    padding-top: 55rpx;
    margin-right: 20rpx;
    background-color:rgb(243, 244, 246);
    overflow: hidden;
}
.leftTitle{
    text-align: center;
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.scroll-right{
    width: 75%;
}
.active{
    color: #43bd56;
    background-color: #fff;
    border-left: 5rpx solid #43bd56;
}
.contentScroll-item{
    width: auto;
    height: auto;
    padding: 10rpx;
}

.medicine-box{
  width: 97%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 1px solid #f1f1f1;
  border-radius: 20rpx;
  padding: 20rpx 0;
  box-shadow: 1rpx 1rpx 10rpx #ccc;
}

.medicine-img{
  border-right: 5rpx solid rgb(243, 244, 246);
}

.medicine-box image{
  display: block;
  width: 190rpx;
  height: 140rpx;
  margin:0 10rpx;
}

.desc{
  height: 140rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.medicine-name{
  font-size: 32rpx;
  font-weight: 600;
}

.medicine-count,.expiration-date{
  font-size: 28rpx;
  font-weight: 400;
}

