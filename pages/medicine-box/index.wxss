.ification{
    width: 100%;
    height: 100%;
    background-color: #fff;
    display: flex;
    justify-content: start;
}
.scroll-left{
    width: 22%;
    padding-top: 55rpx;
    margin-right: 20rpx;
    background-color:rgb(243, 244, 246);
    overflow: hidden;
}
.leftTitle{
    text-align: center;
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.scroll-right{
    width: 75%;
}
.active{
    color: #43bd56;
    background-color: #fff;
    border-left: 5rpx solid #43bd56;
}
.contentScroll-item{
    width: auto;
    height: auto;
    padding: 10rpx;
}

.isChecked{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 20px;
  top: 45%;
  border: 1px solid #ccc;
}

