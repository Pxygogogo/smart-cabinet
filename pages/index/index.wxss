.notice {
  width: 90%;
  height: 360rpx;
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  border: 1px dotted #ccc;
  margin: 0 auto;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.slogan {
  margin: 0 auto;
  font-size: 32rpx;
  color: #ccc;
}

.notice-time {
  width: 70%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 42rpx;
  font-weight: 600;
  flood-color: #43bd56;
  color: #43bd56;
  border: 1px solid #43bd56;
  border-radius: 40rpx;
  text-align: center;
  margin: 10rpx 0 0 10rpx;
}

.notice-medicine-box {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  overflow: hidden;
  padding-top: 30rpx;
}

.specific-medicine {
  height: 40%;
  width: 35%;
}

.specific-medicine image {
  height: 80%;
  width: 80%;
  display: block;
  margin: 0 auto;
}

.medicine-name, .medicine-package {
  font-size: 26rpx;
  width: 100%;
  color: #515a6e;
  text-align: center;
  overflow: hidden;
}

.add {
  position: fixed;
  bottom: 40rpx;
  left: 45%;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 2px solid #43bd56;
  color: #43bd56;
  font-size: 60rpx;
  line-height: 65rpx;
  text-align: center;
  background-color: #fff;
}
