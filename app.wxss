/**app.wxss**/
@import '/style/icon.wxss';


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

view{
  box-sizing: border-box;
}

/* 
  ======== 
  搜索部分css 
  ========
*/
.searech-box{
  width:100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.add-medicine{
  width: 25%;
  height: 60rpx;
}

.add-medicine image{
  width: 100%;
  height: 100%;
}

.search{
  width: 70%;
  height: auto;
  display: flex;
  align-items: flex-start;
  margin: 0rpx auto;
}

.search-left{
  flex: 4;
  background-color: rgb(240, 240, 240);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}

.search input{
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.icon-search{
  width: 10%;
  height: 50rpx;
}
