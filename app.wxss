/* 药品简介 */
.medicine-box{
  width: 97%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 1px solid #f1f1f1;
  border-radius: 20rpx;
  padding: 20rpx 0;
  box-shadow: 1rpx 1rpx 10rpx #ccc;
  position: relative;
}

.medicine-img{
  border-right: 5rpx solid rgb(243, 244, 246);
}

.medicine-box image{
  display: block;
  width: 150rpx;
  height: 140rpx;
  margin:0 10rpx;
}

.desc{
  height: 140rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.medicine-name{
  font-size: 32rpx;
  font-weight: 600;
}

.medicine-count,.expiration-date{
  font-size: 28rpx;
  font-weight: 400;
}


